<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Healthify" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dt_darkpblue</item>
        <item name="colorPrimaryVariant">@color/dt_deepblue</item>
        <item name="colorOnPrimary">@color/dt_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dt_yellow</item>
        <item name="colorSecondaryVariant">@color/dt_pink</item>
        <item name="colorOnSecondary">@color/dt_darkpblue</item>

        <item name="colorSurface">@color/dt_darkpblue</item>

        <item name="colorBackgroundFloating">@color/dt_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Healthify.NoStatusBarTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/dt_yellow</item>
        <item name="colorSurface">@color/dt_darkpblue</item>
        <item name="colorOnSurface">@color/dt_yellow</item>
    </style>

    <style name="authBg">
        <item name="android:background">@color/dt_darkpblue</item>
    </style>

    <style name="ColoredText">
        <item name="android:textColor">@color/dt_yellow</item>
    </style>

    <style name="questionColor">
        <item name="android:textColor">@color/dt_pink</item>
    </style>

    <style name="grayText">
        <item name="android:textColor">@color/dt_gray</item>
    </style>
</resources>