<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Healthify" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lt_darkpblue</item>
        <item name="colorPrimaryVariant">@color/lt_blue</item>
        <item name="colorOnPrimary">@color/surface</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lt_blue</item>
        <item name="colorSecondaryVariant">@color/lt_yellow</item>
        <item name="colorOnSecondary">@color/surface</item>

        <item name="colorBackgroundFloating">@color/surface</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.Healthify.NoStatusBarTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="authBg">
        <item name="android:background">@color/lt_blue</item>
    </style>

    <style name="grayText">
        <item name="android:textColor">@color/gray4</item>
    </style>
</resources>